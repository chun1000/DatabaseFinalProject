<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondaryDescriptionActivity">

    <FrameLayout
        android:id="@+id/activity_secondary_frameLayout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="12"
        android:layout_margin="3sp"
        >

        <Button
            android:layout_margin="1sp"
            android:id="@+id/activity_secondary_description_button_1"
            android:text="상세 정보 조회"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_button"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            />

        <Button
            android:layout_margin="1sp"
            android:id="@+id/activity_secondary_description_button_2"
            android:text="관련 리스트 조회"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_button"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            />

        <Button
            android:layout_margin="1sp"
            android:id="@+id/activity_secondary_description_button_3"
            android:text="채집 도구 보기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_button"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>