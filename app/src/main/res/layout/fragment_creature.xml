<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatureFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="30sp"
            android:text="생물 정보"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3sp"
            android:background="#000000"
            android:layout_margin="4sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생물종 이름"/>

        <TextView
            android:id="@+id/fragment_creature_textView_name"
            android:background="@drawable/text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6sp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서식지"/>

        <TextView
            android:id="@+id/fragment_creature_textView_location"
            android:background="@drawable/text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="분류"/>

        <TextView
            android:id="@+id/fragment_creature_textView_species"
            android:background="@drawable/text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상세설명"/>

        <TextView
            android:id="@+id/fragment_creature_textView_description"
            android:background="@drawable/text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:padding="6sp"
            />




    </LinearLayout>
</FrameLayout>